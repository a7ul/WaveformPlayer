{
  "name": "y-player",
  "version": "1.0.0",
  "description": "An audio player",
  "main": "electron.start.js",
  "scripts": {
    "seperator:main": "======================== MAIN SCRIPTS ==========================================",
    "start": "concurrently --kill-others 'npm run compile:dev' 'npm run electron:dev' 'npm run reduxdevtools:dev'",
    "build": "npm run compile:prod && npm run electron:prod",
    "package:win": "npm run compile:prod && electron-packager ./ YPlayer --ignore node_modules --platform=win32 --arch=x64 --out ~/Desktop/YPlayer-Windowsx86",
    "package:mac": "npm run compile:prod && electron-packager ./ YPlayer --ignore node_modules --platform=darwin --arch=x64 --out ~/Desktop/YPlayer-Macx86",
    "seperator:test": "======================== TEST AND LINT SCRIPTS =================================",
    "test": "npm run prepare:test && NODE_ENV='test' jest --verbose --forceExit",
    "test:watch": "npm run test -- --watch",
    "test:update": "npm run test -- --updateSnapshot",
    "test:coverage": "npm run test -- --coverage  && open ./coverage/lcov-report/index.html",
    "lint": "echo 'Running eslint' && eslint app/",
    "lint:fix": "npm run lint -- --fix",
    "seperator:util": "======================== UTILITY SCRIPTS =======================================",
    "prepare:test":"chmod a+x app/utils/__tests__/mockbin/*",
    "prepare:dev": "cp index.html bundle/index.html && rexreplace 'bundle/' '' bundle/index.html && chmod a+x app/assets/binaries/*/*",
    "compile:dev": "npm run prepare:dev && NODE_ENV='development' webpack-dev-server --progress --config webpack.config.dev.js",
    "compile:prod": "NODE_ENV='production' webpack -p --config webpack.config.prod.js",
    "electron:dev": "NODE_ENV='development' electron electron.start.js",
    "electron:prod": "NODE_ENV='production' electron electron.start.js",
    "reduxdevtools:dev": "node ./helpers/redux-devtools-server"
  },
  "pre-push": [
    "test",
    "lint",
    "compile:prod"
  ],
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "\\.(css|less|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|bin|exe)$": "<rootDir>/helpers/custom-file-transformer.js"
    },
    "cacheDirectory": "./cache",
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "coverageThreshold": {
      "global": {
        "statements": 45
      }
    }
  },
  "repository": "https://github.com/master-atul/YPlayer",
  "keywords": [
    "Electron",
    "youtube",
    "player",
    "audio",
    "downloader",
    "youtube-dl"
  ],
  "author": "master-atul",
  "license": "WTFPL",
  "devDependencies": {
    "babel-core": "^7.0.0-alpha.9",
    "babel-eslint": "^6.0.0-beta.6",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^7.0.0-alpha.9",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^7.0.0-alpha.9",
    "concurrently": "^3.4.0",
    "devtron": "^1.4.0",
    "electron-packager": "^8.7.0",
    "enzyme": "^2.8.2",
    "escope": "^3.6.0",
    "eslint": "^4.0.0-alpha.2",
    "eslint-plugin-react": "^7.0.0-rc.1",
    "file-loader": "0.11.1",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "jest": "^20.0.1",
    "jest-enzyme": "^3.1.0",
    "mock-os": "^0.0.1",
    "pre-push": "^0.1.1",
    "prepush": "^3.1.11",
    "react-addons-test-utils": "^16.0.0-alpha.3",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-test-renderer": "^16.0.0-alpha.12",
    "remote-redux-devtools": "^0.5.10",
    "remotedev-server": "^0.2.2",
    "rexreplace": "^2.2.3",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^1.16.5"
  },
  "dependencies": {
    "electron": "^1.7.0",
    "lodash": "^4.17.4",
    "react": "^16.0.0-alpha.12",
    "react-dom": "^16.0.0-alpha.12",
    "react-redux": "^5.0.4",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.6.0",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0"
  }
}
